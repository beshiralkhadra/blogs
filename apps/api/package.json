{
  "name": "api",
  "version": "1.0.0",
  "description": "Blog API server",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test:setup": "cd ../.. && docker compose -f docker-compose.test.yml up -d postgres-test",
    "test:teardown": "cd ../.. && docker compose -f docker-compose.test.yml down",
    "test": "pnpm test:setup && sleep 3 && jest --runInBand && pnpm test:teardown",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "lint": "echo \"No linting configured yet\"",
    "build": "echo \"No build step needed for API\"",
    "deploy": "echo 'Deploy api placeholder - configure your hosting (e.g., Render/Fly/Heroku) in apps/api/package.json'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
