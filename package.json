  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "prettier": "^3.0.0",
    "turbo": "^1.13.4"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
